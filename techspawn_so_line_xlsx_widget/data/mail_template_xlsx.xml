<odoo>
    <data>
        <!--Email template -->
        <record id="email_sale_order_xlsx" model="mail.template">
            <field name="name">Email Template</field>
            <field name="model_id" ref="techspawn_so_line_xlsx_widget.model_sale_order"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Ref ${object.name or 'n/a' }</field>
            <field name="auto_delete" eval="True"/>
<!--            <field name="report_template" ref="techspawn_so_line_xlsx_widget.partner_xlsx"/>-->
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Hi</p>
                <br/>
                <p>Your Sale Order ${object.name} amounting in ${object.currency_id.symbol}${object.amount_total} is ready for review.</p>
                <br/>
                <br/>
                <p>Do not hesitate to contact us if you have any questions.</p>
                <br/>
                <br/>
                <br/>
                <br/>

                <p>Regards,</p>
                <p>${object.env.user.name}</p>

                 ]]>
            </field>
        </record>
    </data>
</odoo>

